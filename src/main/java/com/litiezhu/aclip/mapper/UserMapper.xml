<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.litiezhu.aclip.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.litiezhu.aclip.dataobject.UserDO">
        <result column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="username" property="userName"/>
        <result column="password" property="passwordEncrypted"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="question" property="question"/>
        <result column="answer" property="answer"/>
        <result column="role" property="role"/>
    </resultMap>

    <sql id="SelectRows">
        `id`, `create_time`, `update_time`, `is_deleted`,
        `username`, `password`, `email`, `phone`, `question`, `answer`, `role`
        from `aclip_user`
    </sql>

    <select id="selectLogin" resultType="int">
        select count(*) from `aclip_user`
        where `username`=#{username} and `password`=#{password}
    </select>
</mapper>